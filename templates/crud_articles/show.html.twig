{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <h1>Articles</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>PrixBarre</th>
                <td>{{ article.prixBarre }}</td>
            </tr>
            <tr>
                <th>Nouveau</th>
                <td>{{ article.nouveau ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ article.image }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ article.prix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('crud_articles_index') }}">back to list</a>

    <a href="{{ path('crud_articles_edit', {'id': article.id}) }}">edit</a>

    {{ include('crud_articles/_delete_form.html.twig') }}
{% endblock %}
